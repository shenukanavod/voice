# MongoDB Configuration for Voice Authentication System

# Application settings
SECRET_KEY=your-secret-key-change-in-production

# MongoDB Database Configuration
# Option 1: Local MongoDB
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=voice_auth_db

# Option 2: MongoDB with Authentication
# MONGODB_URL=mongodb://voice_auth_user:voice_auth_password@localhost:27017
# DATABASE_NAME=voice_auth_db

# Option 3: MongoDB Atlas (Cloud)
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net
# DATABASE_NAME=voice_auth_db

# Option 4: Use SQLite (fallback)
# DATABASE_URL=sqlite:///./data/voice_auth.db

# Audio processing settings
SAMPLE_RATE=16000
AUDIO_DURATION=3.0
N_MFCC=13
N_MELS=128
HOP_LENGTH=512
N_FFT=2048

# Model settings
MODEL_PATH=data/models
VOICE_PROFILES_PATH=data/voice_profiles

# Authentication thresholds
VERIFICATION_THRESHOLD=0.7
SPOOFING_THRESHOLD=0.5
CONTINUOUS_MONITORING_INTERVAL=2.0

# Security settings
ENCRYPTION_KEY_PATH=data/encryption.key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance settings
MAX_ENROLLMENT_SAMPLES=5
BATCH_SIZE=32